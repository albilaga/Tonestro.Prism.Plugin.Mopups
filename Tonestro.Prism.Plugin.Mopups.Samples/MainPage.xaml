<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:samples="clr-namespace:Tonestro.Prism.Plugin.Mopups.Samples"
             x:Class="Tonestro.Prism.Plugin.Mopups.Samples.MainPage"
             x:DataType="samples:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="{Binding Text}" HorizontalTextAlignment="Center" />

            <Button
                Text="Open Login Popup"
                HorizontalOptions="Center" 
                Command="{Binding ClickCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>